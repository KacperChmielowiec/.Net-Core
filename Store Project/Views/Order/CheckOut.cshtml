@model Order

@{
    Layout = "_Layout";
}



<h2>Check out now</h2>
<p>Please enter your details, and we will ship your goods right away !</p>

<form asp-action="Checkout" method="post" asp-controller="Order">
    <h3>Ship to</h3>
    <div class="form-group">
        <label>Name:</label><input asp-for="Name" class="form-control" />
        
    </div>
    <h3>Address</h3>
    <div class="form-group">
        <label>Email:</label><input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>City:</label><input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>Province:</label><input asp-for="Province" class="form-control" />
    </div>
     <div class="form-group">
        <label>Code:</label><input asp-for="Zip" class="form-control" />
    </div>
    <div class="form-group">
        <label>Country:</label><input asp-for="Country" class="form-control" />
    </div>
    <h3>Options</h3>
    <div class="btn-check">
        <label>
            <input asp-for="GiftWrap" /> Gift wrap these items
        </label>

    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete Order" />
    </div>

</form>
